@{
    Layout = "/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = "Display Data";
}
@using Proje.Models
@model IEnumerable<Profile>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
    
    <style>
        .preserve-text {
          white-space: pre-line;
        }
      </style>

</head>
<body>
    <!--satin_alinan_urunler-->
    @{
        if (Model != null)
        {
            foreach (var Data in Model)
            {
                <div class="tab-pane fade" id="ActiveJobs">
                    <div class="card-body pb-2">
                        <div class="row align-items-center WorkCards col-12  ">
                            <div class="col-2 col-md-2 col-lg-1  d-none d-sm-block">
                            </div>

                            <div class="col-12 col-md-7 col-lg-8 "><h5>@Data.kisi_id</h5></div>
                                <div class="col-12 col-md-7 col-lg-8"><h5>@Data.kisi_isim</h5></div>
                                <div class="col-12 col-md-7 col-lg-8 w-100 truncate-text" id="TurnDivPostedJobs"><p>@Data.satin_alinan_id</p></div>
                                <div class="col-12 col-md-7 col-lg-8"><p>@Data.urun_adi</p></div>
                                <div class="col-12 col-md-7 col-lg-8"><p class="lead">@Data.teklif_para</p></div>
                            </div>


                            <div class="col-12 col-md-3 col-sm-3 align-items-center justify-content-center">
                                <div class="text-center">
                                </div>
                            </div>
                        </div>
                    </div>

            }

        }
    }
</body>