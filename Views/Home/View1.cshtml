@{
    Layout = "/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = "Display Data";
}
@using Proje.Models
@model IEnumerable<Profile>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/PostJob.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
    
    <style>
        .preserve-text {
          white-space: pre-line;
        }
      </style>

</head>
<body>
    <!--Teklifler-->
@{
                            if (Model != null)
                            {
                                foreach (var Data in Model)
                                {
                                    <form asp-action="TeklifOnay">
                                    <div class="tab-pane fade" id="AppliedJobs">
                                        <div class="card-body pb-2">
                                            <div class="row align-items-center WorkCards col-12  ">
                                                <div class="col-2 col-md-2 col-lg-1  d-none d-sm-block">
                                                </div>

                                                <div class="col-12 col-md-7 col-lg-8 ">
                                                    <div class="col-12 col-md-7 col-lg-8"><h5>@Data.urun_id</h5></div>
                                                    <div class="col-12 col-md-7 col-lg-8 w-100 truncate-text" id="TurnDivApliedJobs"><p>@Data.urun_adi</p></div>
                                                    <div class="col-12 col-md-7 col-lg-8"><p>@Data.kisi_id</p></div>
                                                    <div class="col-12 col-md-7 col-lg-8"><p class="lead">@Data.teklif_id</p></div>
                                                </div>

                                                <div class="col-12 col-md-3 col-sm-3 align-items-center justify-content-center">
                                                    <div class="text-center">
                                                        <h2 class="col-12 mt-2">@Data.teklif_para</h2>
                                                        <h3 class="col-12"></h3>



                                                        <div class="text-center">
                                                            <div class="col-12 col-md-12">
                                                                <div class="input-group mb-3">
                                                                    <span class="input-group-text">$</span>
                                                                    <input type="text" class="form-control" placeholder="Enter price" aria-label="Price" aria-describedby="basic-addon2">
                                                                    <span class="input-group-text">.00</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                        <input asp-for="@Data.teklif_id" type="text" formmethod="post" class="form-control" placeholder="Enter price" aria-label="Price" aria-describedby="basic-addon2">
                                        <h6>teklif id giriniz</h6>
                                        <button type="submit" asp-action="TeklifOnay" data-mdb-ripple-init type="button" class="btn btn-info w-100">
                                            Onayla
                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                </form>
                                }
                            }
                            }
</body>