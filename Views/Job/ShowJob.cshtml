@{
    Layout = "/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = "Display Data";
}


@using Proje.Models
@model IEnumerable<PostJob>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/Style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>

</head>
<body>
    @{
        <form method="get">
    <div class="container col-8 col-md-10 mt-5 mb-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                    <input type="text" class="form-control search-bar" placeholder="Search jobs...">
            </div>
        </div>
    </div>
        </form>
            if (Model != null)
            {
                foreach (var Data in Model)
                {
                <form asp-action="TeklifSend">
                    <div class="row align-items-center WorkCards col-12 col-xl-8 ">
  <div class="col-2 col-md-2 col-lg-1  d-none d-sm-block">
<img src="Demon.png" alt="" class="img-fluid rounded-circle ">
  </div>

  <div class="col-12 col-md-7 col-lg-8 "><h6>Urun id= @Data.urun_id</h6>
    <div class="col-12 col-md-7 col-lg-8"><h5>@Data.urun_adi</h5></div>
    <div class="col-12 col-md-7 col-lg-8 w-100 truncate-text" id="TurnDiv"><p>@Data.urun_aciklamasi</p></div>
    <div class="col-12 col-md-7 col-lg-8"><p>@Data.urun_zaman</p></div>
    <div class="col-12 col-md-7 col-lg-8"><p class="lead">@Data.urun_type</p></div>
    <div class="col-12 col-md-7 col-lg-8"><p class="lead">@Data.is_type</p></div>
  </div>


  <div class="col-12 col-md-3 col-sm-3 align-items-center justify-content-center">

                            <div class="text-center">
                                <div class="row mb-3">
                                    <div class="col-4">
                                        <h6>Teklif giriniz</h6>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="@Data.teklif_para" type="text" formmethod="post" class="form-control" placeholder="Enter price" aria-label="Price" aria-describedby="basic-addon2">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-4">
                                        <h6>urun ID giriniz</h6>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="@Data.urun_id" type="text" formmethod="post" class="form-control" placeholder="Enter product ID" aria-label="ProductID" aria-describedby="basic-addon2">
                                    </div>
                                </div>
                            </div>
<div class="col-12 col-md-12">
      <button type="submit" asp-action="TeklifSend" data-mdb-ripple-init type="button" class="btn btn-info w-100">
        Bid
      </button>
</div>
<div class="col-12 mt-2 text-center">
  <h2>@Data.urun_para $</h2>
</div>
    </div>
  </div>
                </form>

                }
            }
        }
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</div>
</body>
</html>
